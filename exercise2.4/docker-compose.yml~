version: "3.8"

services:
  backend:
    container_name: backend
    environment:
      REDIS_HOST: redis
    build: ./example-backend
    ports:
      - 8080:8080
  frontend:
    container_name: frontend
    build: ./example-frontend
    ports:
      - 5000:5000
  redis:
    container_name: redis-cache
    image: redis
    restart: unless-stopped
